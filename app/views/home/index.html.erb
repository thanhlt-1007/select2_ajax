<div class="container">
  <h2>Home#index</h2>

  <%= form_tag "#" do %>
    <div class="form-group">
      <%= label_tag :category_id, "Select category" %>
      <%= select_tag :category_id, options_for_select(category_options), include_blank: true, class: "form-control" %>
      <br>

      <%= label_tag :article_id, "Select article" %>
      <%= select_tag :category_id, options_for_select(article_options), include_blank: true, class: "form-control" %>
      <br>
    </div>
  <% end %>
</div>
